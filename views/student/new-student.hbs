{{#each errors }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
           
        </button>
    </div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Alumno</h3>
        </div>
        <div class="card-body">
            <form action="/student/new-student" method="POST">
                <div class="form-group mb-3">
                    <input type="text" name="apellido" class="form-control" placeholder="Apellido" autofocus value = {{apellido}}>
                </div>
                <div class="form-group mb-3">
                    <input name="nombre" class="form-control" placeholder="Nombre" value = {{nombre}}>
                </div>
                <div class="form-group mb-3">
                    <input name="carrera" class="form-control" placeholder="Carrera" value = {{carrera}}>
                </div>
                <div class="form-group mb-3">
                    <input name="registro" class="form-control" placeholder="Registro" value = {{registro}}>
                </div>
                <div class="form-group mb-3">
                    <input name="dni" class="form-control" placeholder="DNI" value = {{dni}}>
                </div>
                <div class="form-group mb-3">
                    <input name="email" class="form-control" placeholder="Email" value = {{email}}>
                </div>
                
                <input type="radio" class="btn-check " name="materia" id="info1" autocomplete="off" value="info1">
                <label class="btn btn-outline-primary" for="info1" >info1</label>

                <input type="radio" class="btn-check " name="materia" id="info2" autocomplete="off" value="info2">
                <label class="btn btn-outline-primary" for="info2">info2</label>
                                        
               
                
                <div class="form-group mt-3">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>